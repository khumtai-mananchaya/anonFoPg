<h3>Create a new post</h3>

<%= form_with model: @post, :html => {:class => "form"}, url: new_post_path do |f| %>
  <div class="form-group">
      <%= f.text_field :post_content %>
      </div>
    <div class="form-group">
    <%= f.submit 'Submit' %>
    </div>
  <% end %>

<%= link_to 'Back', posts_path %>
